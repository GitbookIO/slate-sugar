{
  "name": "slate-sugar",
  "description": "Set of Slate helpers to create nodes and documents.",
  "version": "0.2.0",
  "license": "Apache-2.0",
  "repository": "git://github.com/GitbookIO/slate-sugar.git",
  "main": "./dist/index.js",
  "peerDependencies": {
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "slate": "^0.20.1"
  },
  "devDependencies": {
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "slate": "^0.20.1",
    "ava": "^0.19.1",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^3.1.1",
    "eslint-config-gitbook": "1.4.0"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "test": "ava",
    "test:watch": "ava --watch",
    "prebuild": "npm run lint && npm run test && rm -rf ./dist",
    "build": "babel src --out-dir dist --ignore __tests__",
    "prepublish": "npm run build"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "keywords": [
    "slate"
  ],
  "files": [
    "dist",
    "LICENSE",
    "package.json"
  ]
}
